<script>
const numbers = [
    0,32,15,19,4,21,2,25,17,34,
    6,27,13,36,11,30,8,23,10,5,
    24,16,33,1,20,14,31,9,22,18,
    29,7,28,12,35,3,26
];

const colors = [];
colors.push('Green'); // zero
for(let i=1;i<numbers.length;i++){
    colors.push(i%2===1?'Red':'Black');
}

const wheel = document.getElementById('rouletteWheel');
const ball = document.getElementById('rouletteBall');
const spinBtn = document.getElementById('spinBtn');
const resultText = document.getElementById('result');
const moneyDisplay = document.getElementById('money');
let money = 10000;

spinBtn.addEventListener('click',()=>{
    const betAmount=parseInt(document.getElementById('betAmount').value);
    const betColor=document.getElementById('betColor').value;
    if(isNaN(betAmount)||betAmount<=0||betAmount>money){
        alert('Enter valid bet within your money');
        return;
    }
    resultText.textContent='';

    const wheelSpin=Math.floor(Math.random()*3600)+720;
    const ballSpin=Math.floor(Math.random()*3600)+720;

    wheel.style.transition='transform 4s cubic-bezier(0.33,1,0.68,1)';
    wheel.style.transform=`rotate(${wheelSpin}deg)`;

    ball.style.transition='transform 4s cubic-bezier(0.33,1,0.68,1)';
    ball.style.transform=`translate(-50%, -50%) rotate(${ballSpin}deg) translateY(-200px)`;

    setTimeout(()=>{
        const finalDegree=(360-(wheelSpin%360))%360;
        const sectionAngle=360/numbers.length;
        const index=Math.floor(finalDegree/sectionAngle);
        const winningNumber=numbers[index];
        const winningColor=colors[index];

        let outcome='';
        if(winningColor===betColor){
            outcome='WIN';
            money+=betAmount;
        } else {
            outcome='LOSE';
            money-=betAmount;
        }
        moneyDisplay.textContent=money;
        resultText.textContent=`Number: ${winningNumber} - ${winningColor} - ${outcome}`;
    },4000);
});
</script>

